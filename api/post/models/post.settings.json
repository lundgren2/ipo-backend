{
  "kind": "collectionType",
  "collectionName": "posts",
  "info": {
    "name": "Post",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "body": {
      "type": "richtext"
    },
    "categories": {
      "collection": "category",
      "via": "posts",
      "dominant": true
    },
    "slug": {
      "type": "string"
    },
    "excerpt": {
      "type": "text"
    },
    "author": {
      "plugin": "users-permissions",
      "model": "user"
    },
    "original_date": {
      "type": "datetime"
    },
    "wp_id": {
      "type": "integer"
    },
    "image": {
      "model": "file",
      "via": "related",
      "allowedTypes": ["images", "videos"],
      "plugin": "upload",
      "required": false
    },
    "tags": {
      "collection": "tag",
      "via": "posts",
      "dominant": true
    },
    "companies": {
      "collection": "companies",
      "via": "posts"
    },
    "source": {
      "type": "string"
    },
    "article_url": {
      "type": "string"
    },
    "pdf_url": {
      "type": "string"
    },
    "source_id": {
      "type": "string",
      "private": false,
      "unique": true
    }
  }
}
