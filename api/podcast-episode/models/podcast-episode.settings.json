{
  "kind": "collectionType",
  "collectionName": "podcast_episodes",
  "info": {
    "name": "Podcast Episode"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string"
    },
    "date": {
      "type": "datetime"
    },
    "summary": {
      "type": "text"
    },
    "cover": {
      "model": "file",
      "via": "related",
      "allowedTypes": ["images", "files", "videos"],
      "plugin": "upload",
      "required": false
    },
    "description": {
      "type": "richtext"
    },
    "podcast": {
      "model": "podcast",
      "via": "podcastEpisodes"
    },
    "coverUrl": {
      "type": "string"
    },
    "slug": {
      "type": "string"
    }
  }
}
