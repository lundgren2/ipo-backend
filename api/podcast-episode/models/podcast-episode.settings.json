{
  "kind": "collectionType",
  "collectionName": "podcast_episodes",
  "info": {
    "name": "Podcast Episode"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "string"
    },
    "date": {
      "type": "datetime"
    },
    "summary": {
      "type": "text"
    },
    "cover": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "links": {
      "type": "component",
      "repeatable": true,
      "component": "general.link"
    },
    "description": {
      "type": "text"
    },
    "descriptionHtml": {
      "type": "richtext"
    },
    "podcast": {
      "model": "podcast"
    },
    "coverUrl": {
      "type": "string"
    },
    "slug": {
      "type": "string"
    }
  }
}
