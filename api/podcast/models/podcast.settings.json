{
  "kind": "collectionType",
  "collectionName": "podcasts",
  "info": {
    "name": "Podcast"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "richtext"
    },
    "show": {
      "type": "enumeration",
      "enum": [
        "market_makers"
      ],
      "default": "market_makers"
    },
    "date": {
      "type": "date"
    },
    "cover": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "files": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    }
  }
}
