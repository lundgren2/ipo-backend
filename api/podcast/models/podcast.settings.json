{
  "kind": "collectionType",
  "collectionName": "podcasts",
  "info": {
    "name": "Podcast"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "cover": {
      "model": "file",
      "via": "related",
      "allowedTypes": ["images", "files", "videos"],
      "plugin": "upload",
      "required": false
    },
    "description": {
      "type": "richtext"
    },
    "summary": {
      "type": "text"
    },
    "podcastEpisodes": {
      "via": "podcast",
      "collection": "podcast-episode"
    },
    "coverUrl": {
      "type": "string"
    },
    "slug": {
      "type": "string"
    }
  }
}
